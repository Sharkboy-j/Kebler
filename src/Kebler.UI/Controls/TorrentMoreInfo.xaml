<UserControl
    x:Class="Kebler.UI.Controls.TorrentMoreInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Kebler.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muliTreeView="clr-namespace:Kebler.UI.CSControls.MuliTreeView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Kebler"
    lex:ResxLocalizationProvider.DefaultDictionary="Dialogs"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="ListViewTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18" />
                    <ColumnDefinition Width="18" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    VerticalAlignment="Center"
                    Focusable="False"
                    IsChecked="{Binding IsChecked}"
                    Tag="{Binding}" />
                <Path
                    Grid.Column="1"
                    Width="18"
                    Height="17"
                    Margin="0,0,3,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Data="{DynamicResource Icon.Dir}"
                    Fill="{DynamicResource ForegroundBrush.DimGray}"
                    Stretch="Fill"
                    Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Path
                    Grid.Column="1"
                    Width="18"
                    Height="17"
                    Margin="0,0,3,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Data="{DynamicResource Icon.File}"
                    Fill="#FF157EFB"
                    Stretch="Fill"
                    Visibility="{Binding HasChildren, Converter={StaticResource ReverseBoolToVisibilityConverter}}" />

                <TextBlock
                    Grid.Column="2"
                    Text="{Binding Title}"
                    TextTrimming="CharacterEllipsis" />
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="False">
                                <Setter Property="Grid.Opacity" Value="0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>

        <TabControl>
            <TabItem Header="General">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Height="15"
                            Margin="0"
                            Source="{Binding Selected, Converter={StaticResource PieceToImage}}"
                            Stretch="Fill">
                            <Image.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="305"
                                    ShadowDepth="0" />
                            </Image.Effect>
                        </Image>
                        <ProgressBar
                            Height="5"
                            Margin="0"
                            Background="{DynamicResource ProgressBarBackGroundBrush}"
                            BorderThickness="0"
                            Foreground="DarkBlue"
                            Maximum="1"
                            Value="{Binding Selected.PercentDone}" />
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Files">
                <muliTreeView:FileListTreeView
                    x:Name="TreeView"
                    Margin="-2"
                    x:FieldModifier="public"
                    ItemTemplate="{StaticResource ListViewTemplate}"
                    Style="{StaticResource FileListMultiselectionTreeViewDefaultStyle}"
                    TextSearch.TextPath="Title" />
            </TabItem>
        </TabControl>

        <Grid
            d:IsHidden="True"
            Background="{DynamicResource ListBox.Static.Background}"
            Visibility="{Binding Loading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Normal"
                    Foreground="White"
                    Text="{lex:LocText ATD_RetrievingSettings}"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextRenderingMode="ClearType" />
                <local:LoadingRing
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="0"
            Background="{DynamicResource ListBox.Static.Background}"
            Visibility="{Binding IsMore, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel
                Height="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Image Width="100" Source="/Kebler.UI;Component/Icons/Kebler_dark_512x512.png" />
                <TextBlock
                    Width="Auto"
                    Margin="0,10,0,0"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="{DynamicResource ForegroundBrush.Gray}"
                    Text="Select only one torrent to see more info"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextHintingMode="Auto"
                    TextOptions.TextRenderingMode="Grayscale" />

                <TextBlock
                    Width="Auto"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Foreground="{DynamicResource ForegroundBrush.Gray}"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextHintingMode="Auto"
                    TextOptions.TextRenderingMode="Grayscale">
                    <Run Text="{Binding SelectedCount}" />
                    <Run Text="torrents selected" />
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>

</UserControl>
