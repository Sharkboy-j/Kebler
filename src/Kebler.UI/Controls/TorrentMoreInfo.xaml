                            Stretch="Fill">
                            <csControls:PiecesImage.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="305"
                                    ShadowDepth="0" />
                            </csControls:PiecesImage.Effect>
                        </csControls:PiecesImage>

                        <ProgressBar
                            Height="5"
                            Margin="0"
                            Background="{DynamicResource ProgressBarBackGroundBrush}"
