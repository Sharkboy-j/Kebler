            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border
                        x:Name="rectangle"
                        Width="{TemplateBinding FrameworkElement.Width}"
                        Height="{TemplateBinding FrameworkElement.Height}"
                        Background="{DynamicResource ScrollBar.Static.Thumb}"
                        BorderBrush="{DynamicResource ScrollBar.Static.Thumb.Border}"
                        BorderThickness="1" CornerRadius="0" SnapsToDevicePixels="true" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="UIElement.IsMouseOver" Value="true">
                            <Setter TargetName="rectangle" Property="Border.Background"
                                    Value="{DynamicResource ScrollBar.MouseOver.Thumb}" />
                            <Setter TargetName="rectangle" Property="Border.BorderBrush"
                                    Value="{DynamicResource ScrollBar.MouseOver.Thumb.Border}" />
                        </Trigger>
                        <Trigger Property="Thumb.IsDragging" Value="true">
                            <Setter TargetName="rectangle" Property="Border.Background"
                                    Value="{DynamicResource ScrollBar.Pressed.Thumb}" />
                            <Setter TargetName="rectangle" Property="Border.BorderBrush"
                                    Value="{DynamicResource ScrollBar.Pressed.Thumb.Border}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
